-- Edited On : {dateTime}

-------------------------------------------------------------------------------
----------------------------- LUA FOR 8650 ------------------------------------
-------------------------------------------------------------------------------

  -----------------------------------------------
  ----------------- Runtime Lua -----------------
  -----------------------------------------------
  if not init then
    -- Set name on unit -------------------------
    ME.CSV1 = ME.MV114_Desc
    ---------------------------------------------
    init = true
  end

  -- Write unit name to EEPROM, when changed ----
  if (ME.CSV1 ~= ME.MV114_Desc) then ME.MV114_Desc = ME.CSV1 end
  -----------------------------------------------
  
  -----------------------------------------------
  ---------- Once in a Lifetime Values ----------
  -----------------------------------------------
  if ME.MV6_PV[3] ~= 2 then
    ME.MV6_PV[3] = 2    -- Write to Priority 3 for lifetime non-volatile save
  end
-------------------------------------------------------------------------------
-------------------------------- END LUA --------------------------------------
-------------------------------------------------------------------------------
